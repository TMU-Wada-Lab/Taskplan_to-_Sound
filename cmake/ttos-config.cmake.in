# TtoS CMake config file
#
# This file sets the following variables:
# TtoS_FOUND - Always TRUE.
# TtoS_INCLUDE_DIRS - Directories containing the TtoS include files.
# TtoS_IDL_DIRS - Directories containing the TtoS IDL files.
# TtoS_LIBRARIES - Libraries needed to use TtoS.
# TtoS_DEFINITIONS - Compiler flags for TtoS.
# TtoS_VERSION - The version of TtoS found.
# TtoS_VERSION_MAJOR - The major version of TtoS found.
# TtoS_VERSION_MINOR - The minor version of TtoS found.
# TtoS_VERSION_REVISION - The revision version of TtoS found.
# TtoS_VERSION_CANDIDATE - The candidate version of TtoS found.

message(STATUS "Found TtoS-@PROJECT_VERSION@")
set(TtoS_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(TtoS_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(TtoS_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(TtoS_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(TtoS_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(TtoS_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(TtoS_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(TtoS_DEFINITIONS ${<dependency>_DEFINITIONS})

set(TtoS_VERSION @PROJECT_VERSION@)
set(TtoS_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(TtoS_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(TtoS_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(TtoS_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

